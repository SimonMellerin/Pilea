{% macro summary(month) %}

    <div class="row month-summary" data-month="{{ month }}" >
      <div class="col-6 vert-sep">
        <div class="row">
          <div class="col-2">
            <img alt="electicity" src="{{ asset('image/electricity.svg') }}" class="index-logo">
          </div>
          <div class="col-3">
            <div id="conso-total-{{ month }}" class="dash-index-total"></div>
          </div>
          <div class="col-4">
            <div id="conso-repartition-{{ month }}"></div>
          </div>
          <div class="col-3">
            <div id="conso-repartition-legend-{{ month }}"></div>
            <!--
            <ul class="dash-index-avg">
                <li> {{ 'Max : ' | trans }}<span id="conso-max-{{ month }}">--</span></li>
                <li> {{ 'Moy : ' | trans }}<span id="conso-avg-{{ month }}">--</span></li>
                <li> {{ 'Min : ' | trans }}<span id="conso-min-{{ month }}">--</span></li>
            </ul>
            -->
          </div>
        </div>
      </div>

      <div class="col-6">
        <div class="row">
          <div class="col-2">
            <img alt="temperature" src="{{ asset('image/temperature.svg') }}" class="index-logo"></div>
          <div class="col-3">
            <div id="dju-total-{{ month }}" class="dash-index-total"></div>
          </div>
          <div class="col-4">
            <div id="temp-repartition-{{ month }}"></div>
          </div>
          <div class="col-3">
            <div id="temp-repartition-legend-{{ month }}"></div>
          <!--
            <ul class="dash-index-avg">
                <li> {{ 'Max : ' | trans }}<span id="temp-max-{{ month }}">--</span></li>
                <li> {{ 'Moy : ' | trans }}<span id="temp-avg-{{ month }}">--</span></li>
                <li> {{ 'Min : ' | trans }}<span id="temp-min-{{ month }}">--</span></li>
            </ul>
             -->
          </div>
        </div>
      </div>

    </div>
{% endmacro %}
