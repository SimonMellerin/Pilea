{% extends "bases/dashboard.html.twig" %}

{% block title %}{{ 'Analyse de la météo' | trans }}{% endblock %}

{% block body %}
  <div class="container-fluid">
    <div class="row">
      <div id="temperature" class="col-4">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title">{{ 'Température' | trans }}</h2>
            <div class="content">
              <div class="meteo-top">
                <img alt="temperature" src="{{ asset('image/temperature.svg') }}" class="meteo-logo">
                <p>
                  <b><span id="dju">--</span> {{ ' DJU' | trans }}</b>
                  <br>
                  {{ '(degrés jour unifié)' | trans }}
                </p>
              </div>
              <div class="meteo-card-1">
                <div id="temp-repartition" class="global-repartition"></div>
                <div id="temp-repartition-legend" class="global-repartition-legend"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div id="nebulosity" class="col-4">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title">{{ 'Nébulosité' | trans }}</h2>
            <div class="content">
              <div class="meteo-top">
                <img alt="cloud" src="{{ asset('image/cloud.svg') }}" class="meteo-logo">
                <p>
                  <b>
                    <span id="neb-day">--</span>/<span class="nb-day">--</span>
                    <br>
                    {{ ' jours' | trans }}
                    </b>
                  <br>
                  {{ 'sans nuages' | trans }}
                </p>
              </div>
              <div class="meteo-card-1">
                <div id="neb-repartition" class="global-repartition"></div>
                <div id="neb-repartition-legend" class="global-repartition-legend"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div id="rain" class="col-4">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title">{{ 'Précipitations' | trans }}</h2>
            <div class="content">
              <div class="meteo-top">
                <img alt="rain" src="{{ asset('image/rain.svg') }}" class="meteo-logo">
                <p>
                  <b>
                    <span id="rain-day">--</span>/<span class="nb-day">--</span>
                    <br>
                    {{ ' jours' | trans }}
                  </b>
                  <br>
                  {{ 'sans pluie' | trans }}
                </p>
              </div>
              <div class="meteo-card-1">
                <div id="rain-repartition" class="global-repartition"></div>
                <div id="rain-repartition-legend" class="global-repartition-legend"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block js %}
  <script src={{ asset("js/graph_lib.js") }}></script>
  <script src={{ asset("js/meteo.js") }}></script>
{% endblock %}
