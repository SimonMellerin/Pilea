{% extends "bases/dashboard.html.twig" %}

{% block title %}{{ 'Analyse de la météo' | trans }}{% endblock %}

{% block body %}
  <div class="container-fluid">
    <div class="row">
      <div id="temperature" class="col-4">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title">{{ 'Température' | trans }}</h2>
            <hr>
            <div class="content">
              <div class="meteo-top">
                <ul>
                  <li> {{ 'Max : ' | trans }}<span id="temp-max">--</span></li>
                  <li> {{ 'Moy : ' | trans }}<span id="temp-avg">--</span></li>
                  <li> {{ 'Min : ' | trans }}<span id="temp-min">--</span></li>
                </ul>
              </div>
              <div id="temp-repartition" class="col-10">
                {# Will be fill by plotly #}
              </div>
            </div>
          </div>
        </div>
      </div>
      <div id="nebulosity" class="col-4">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title">{{ 'Nébulosité' | trans }}</h2>
            <hr>
            <div class="content">
              <div class="meteo-top">
                <b><span id="neb-day">--</span> {{ ' jours' | trans }}</b><br>
                {{ 'sans nuages' | trans }}
              </div>
              <div id="neb-repartition" class="col-10">
                {# Will be fill by plotly #}
              </div>
            </div>
          </div>
        </div>
      </div>
      <div id="rain" class="col-4">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title">{{ 'Précipitations' | trans }}</h2>
            <hr>
            <div class="content">
                <div class="meteo-top">
                  <b><span id="rain-day">--</span> {{ ' jours' | trans }}</b><br>
                  {{ 'sans pluie' | trans }}
                </div>
                <div id="rain-repartition" class="col-10">
                  {# Will be fill by plotly #}
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block js %}
  <script src={{ asset("js/graph_lib.js") }}></script>
  <script src={{ asset("js/meteo_graph.js") }}></script>
{% endblock %}
