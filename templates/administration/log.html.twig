{% extends 'base.html.twig' %}

{% block title %}{{ 'Derniers logs' | trans }}{% endblock %}

{% block selection %}{% endblock %}

{% block body %}
  <div class="container-fluid users">
    <div class='card'>
      <div class="card-body">
        <h1>{{ 'Derniers logs' | trans }}</h1>
        <table class="table table-striped table-hover">
          <tbody>
            {% for log in logs|reverse %}
            {% set class = "" %}
            {% if ".CRITICAL" in log or ".ERROR" in log %}
            {% set class = "danger" %}
            {% endif %}
            <tr scope="row">
              <td class="{{ class ? "table-" ~ class : ""}}">{{ log }}</td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
        {# <figure class="highlight">
          <pre>
            <code>
              {{log}}
            </code>
          </pre>
        </figure> #}

      </div>
    </div>
  </div>
{% endblock %}

{% block stylesheets %}
{% endblock %}
