{% extends 'bases/base.html.twig' %}

{% block title %}{{ 'Configuration' | trans }}{% endblock %}

{% block body %}
  <div class="container-fluid">
    <div class='card config-form'>
      <div class="card-body">
        <h1> {{ 'Configuration' | trans }} </h1>
        {% if message %}
        <div class="alert alert-success" role="alert">
            {{ message }}
        </div>
        {% endif %}
        {{ form_start(form_config) }}
        {{ form_errors(form_config) }}
        <h2><i class="fas fa-clipboard-check"></i> {{ 'Informations générales' | trans }}</h2>

            <div class="form-group row">
                <div class="col-sm-5 col-form-label">
                  {{ form_label(form_config.address) }}
                </div>
                <div class="col-sm-7">
                  {{ form_widget(form_config.address) }}
                  {{ form_errors(form_config.address) }}
                  {{ form_help(form_config.address) }}
                </div>
              </div>
            <hr>

            <h2><i class="fas fa-tachometer-alt"></i> {{ 'Compte Enedis' | trans }}</h2>
            <div class="form-group row">
              <div class="col-sm-5 col-form-label">
                {{ form_label(form_config.login) }}
              </div>
              <div class="col-sm-7">
                {{ form_widget(form_config.login) }}
                {{ form_errors(form_config.login) }}
                {{ form_help(form_config.login) }}
              </div>
            </div>

            <div class="form-group row">
              <div class="col-sm-5 col-form-label">
                {{ form_label(form_config.password) }}
              </div>
              <div class="col-sm-7">
                {{ form_widget(form_config.password) }}
                {{ form_help(form_config.password) }}
              </div>
            </div>
            <hr>

            <h2><i class="fas fa-cloud-sun"></i> {{ 'Météo' | trans}}</h2>
            <div class="form-group row">
              <div class="col-sm-5 col-form-label">
                {{ form_label(form_config.station) }}
              </div>
              <div class="col-sm-7">
                {{ form_widget(form_config.station) }}
                {{ form_help(form_config.station) }}
                {{ form_errors(form_config.station) }}
              </div>
            </div>

          {{ form_end(form_config) }}
      </div>
    </div>
  </div>
{% endblock %}

{% block stylesheets %}

{% endblock %}
